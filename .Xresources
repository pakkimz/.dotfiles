xterm*termName: xterm-256color
! Brogrammer:
!xterm*.foreground:  #d6dbe5
!xterm*.background:  #131313
!xterm*.color0:      #1f1f1f
!xterm*.color8:      #d6dbe5
!xterm*.color1:      #f81118
!xterm*.color9:      #de352e
!xterm*.color2:      #2dc55e
!xterm*.color10:     #1dd361
!xterm*.color3:      #ecba0f
!xterm*.color11:     #f3bd09
!xterm*.color4:      #2a84d2
!xterm*.color12:     #1081d6
!xterm*.color5:      #4e5ab7
!xterm*.color13:     #5350b9
!xterm*.color6:      #1081d6
!xterm*.color14:     #0f7ddb
!xterm*.color7:      #d6dbe5
!xterm*.color15:     #ffffff
!xterm*.colorBD:     #d6dbe5

! Cursor color is always the color of the foreground,
xterm*cursorColor: *XtDefaultForeground

! Use a truetype font and size.
! xterm*faceName: DejaVu Sans Mono:style=Book
! xterm*faceName: DejaVuSansMono Nerd Font Mono:style=Book
xterm*faceName: MesloLGS Nerd Font Mono:style=Regular
! xterm*faceName: RobotoMono Nerd Font Mono:style=Regular
! xterm*faceName: Cousine Nerd Font Mono:style=Regular
! xterm*faceName: FiraCode Nerd Font Mono:style=Regular
! xterm*faceName: Hack Nerd Font Mono:style=Regular
xterm*faceSize: 12
xterm*renderFont: true

! Only select text
xterm*highlightSelection: true
! Remove trailing spaces
xterm*trimSelection: true

! Copy paste clipboard & increase and decrease font
xterm*VT100.Translations: #override \
  Ctrl <Key>v: insert-selection(CLIPBOARD) \n\
  Ctrl <Key>c: copy-selection(CLIPBOARD) \n\
  Ctrl <Key> minus: smaller-vt-font() \n\
  Ctrl <Key> plus: larger-vt-font() \n\
  Ctrl <Key> 0: set-vt-font(d) \n\
  Ctrl <Key>e: scroll-back(1) \n\
  Ctrl <Key>y: scroll-forw(1)

! Base16 Default Dark
